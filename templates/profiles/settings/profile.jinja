{% extends 'profiles/base.jinja' %}

{% block profile_content %}
  <div class="row">
    <div class="col-md-18 col-md-offset-6">

      <h1>Mein Profil</h1>
      <style>
        input, select {
          padding: 6px 12px;
          width: 100%;
        }
      </style>
      <div class="user-profile">
        <form accept-charset="UTF-8"
              action="{{ url('user:settings') }}"
              class="form-horizontal"
              role="form"
              enctype="multipart/form-data"
              method="post"
            >
          {% csrf_token %}

          <h3>Benutzerdaten</h3>

          <div class="form-group">
            <label class="control-label col-sm-6" for="{{ form.avatar.id }}">
              {{ form.avatar.label }}
            </label>

            <div class="col-sm-10">
              {{ form.avatar }}
            </div>
          </div>

          <div class="form-group">
            <label class="control-label col-sm-6" for="{{ form.preferred_name.id }}">
              {{ form.preferred_name.label }}
            </label>

            <div class="col-sm-10">
              {{ form.preferred_name }}
              <span class="help-block">Pflichtfeld.</span>
            </div>
          </div>

          <div class="row">
            <h3>Anschrift</h3>
            <p class="col-sm-18">
              Dein Name und deine Anschrift werden nur für den Versand von Prämien und Produkten verwendet und nicht
              öffentlich angezeigt.
            </p>
          </div>
          <div class="form-group">
            <label class="control-label col-sm-6" for="{{ form.full_name.id }}">
              {{ form.full_name.label }}
            </label>

            <div class="col-sm-10">
              {{ form.full_name }}
              <span class="help-block">Pflichtfeld.</span>
            </div>
          </div>

          <div class="form-group">
            <label class="control-label col-sm-6" for="{{ form.address1.id }}">
              {{ form.address1.label }}
            </label>

            <div class="col-sm-10">
              {{ form.address1 }}
              <span class="help-block">Pflichtfeld.</span>
              {{ form.address2 }}
              {{ form.address3 }}

            </div>
          </div>

          <div class="form-group">
            <label class="control-label col-sm-6" for="{{ form.postcode.id }}">
              {{ form.postcode.label }}
            </label>

            <div class="col-sm-10">
              {{ form.postcode }}
              <span class="help-block">Pflichtfeld.</span>
            </div>
          </div>

          <div class="form-group">
            <label class="control-label col-sm-6" for="{{ form.city.id }}">
              {{ form.city.label }}
            </label>

            <div class="col-sm-10">
              {{ form.city }}
              <span class="help-block">Pflichtfeld.</span>
            </div>
          </div>

          <div class="form-group">
            <label class="control-label col-sm-6" for="{{ form.country.id }}">
              {{ form.country.label }}
            </label>

            <div class="col-sm-10">
              {{ form.country }}
              <span class="help-block">Pflichtfeld.</span>
            </div>
          </div>
            <h3>Persönliche Daten</h3>
          <div class="form-group">
            <label class="control-label col-sm-6" for="{{ form.birth_date.id }}">
              {{ form.birth_date.label }}
            </label>

            <div class="col-sm-10">
              {{ form.birth_date }}
              <span class="help-block">Pflichtfeld.</span>
            </div>
          </div>

          <div class="form-group">
            <label class="control-label col-sm-6" for="{{ form.gender.id }}">
              {{ form.gender.label }}
            </label>

            <div class="col-sm-10">
              {{ form.gender }}
              <span class="help-block">Pflichtfeld.</span>
            </div>
          </div>

          <div class="form-group">
            <label class="control-label col-sm-6" for="{{ form.family_status.id }}">
              {{ form.family_status.label }}
            </label>

            <div class="col-sm-10">
              {{ form.family_status }}
              <span class="help-block">Pflichtfeld.</span>
            </div>
          </div>

          <div class="form-group"><label class="control-label col-sm-6"></label>

            <div class="col-sm-10">
              <input class="btn btn-primary btn-block" name="commit" type="submit" value="Speichern">
            </div>

          </div>
        </form>
      </div>
    </div>
  </div>
{% endblock profile_content %}