{% extends 'profiles/base.jinja' %}

{% block profile_content %}
<h1>Mein Profil</h1>
<div class="user-profile">
  <form accept-charset="UTF-8"
        action="{{ url('user:settings') }}" class="form-horizontal" enctype="multipart/form-data"
        method="post"
      >
    {% csrf_token %}
    {% autoescape off %}
    {{ form|bootstrap }}
    {% endautoescape %}
    <div class="form-group"><label class="control-label col-sm-6"></label>

      <div class="col-sm-10">
        <input class="btn-primary btn-block" name="commit" type="submit" value="Speichern">
      </div>

    </div>
  </form>
</div>
{% endblock profile_content %}