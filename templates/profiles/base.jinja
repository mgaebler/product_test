{% extends 'base.jinja' %}

{% block body_class %}s--users p--trendpoints reduced-header user-dashboard{% endblock %}

{% block dash_nav %}
  <div class="dash-nav-wrapper">
    <div class="inner">
      <nav class="dash-nav">
        <li class="page-nav-info{% if request.path == url('socialaccount_connections') %} active{% endif %}">
          <span class="my-surveys-new">Neu!</span>
          <a href="{{ url('socialaccount_connections') }}">Soziale Netze</a>
        </li>
        <li class="page-nav-info{% if request.path == url('user:tests') %} active{% endif %}">
          <a href="{{ url('user:tests') }}">Meine Produkttests</a>
        </li>
        <li class="page-nav-info{% if request.path.startswith('/my/umfrage') %} active{% endif %}">
          <a href="{{ url('user:surveys') }}">Meine Umfragen</a>
        </li>
        <li class="page-nav-info{% if request.path == url('user:trendpoints') %} active{% endif %}">
          <a href="{{ url('user:trendpoints') }}">Meine Trendpoints</a>
        </li>
        <li class="page-nav-info{% if request.path == url('user:trendshop') %} active{% endif %}">
          <a href="{{ url('user:trendshop') }}">Trendshop</a>
        </li>
        <li class="page-nav-info{% if request.path == url('user:invite_friends') %} active{% endif %}">
          <a href="{{ url('user:invite_friends') }}">Freunde einladen</a>
        </li>
      </nav>
    </div>
  </div>
{% endblock dash_nav %}

{% block content %}

  <div class="container">

    {% block profile_content %}{% endblock profile_content %}

  </div>

{% endblock content %}
