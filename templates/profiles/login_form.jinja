{% extends 'base.jinja' %}

{% block content %}

{{ providers_media_js(request)|safe }}

<div class="inner container">
  <div class="box login col-md-12 col-md-offset-6">
    <h2>Anmelden</h2>
    <form accept-charset="UTF-8" action="{{ url('user:login') }}" class="new_user" id="new_user" method="post">
      {% csrf_token %}
      {% if request.GET.get("next") %}
        <input type="text" name="next" value="{{Â request.GET.get("next") }}" />
      {% endif %}
      <div class="form-group"><label class="sr-only control-label" for="user_email">Email</label>
        <input class="form-control" id="user_email" name="user[email]" placeholder="Deine E-Mail-Adresse" type="text">
      </div>
      <div class="form-group">
        <label class="sr-only control-label" for="user_password">Password</label>
        <input class="form-control" id="user_password" name="user[password]" placeholder="Dein Passwort" type="password">
      </div>
      <div class="form-group">
        <input class="btn btn-primary" inline="true" name="commit" type="submit" value="Anmelden">
        <a class="btn" href="{{ url('user:register') }}">Noch nicht registriert?</a>
      </div>
      <div>
        <a href="{{ provider_login_url(request, 'facebook', method='js_sdk', next=url('user:settings')) }}">
          Mit Facebook anmelden
        </a>
      </div>
      <div class="form-group">
        <a href="{{ url('user:password_reset') }}">Passwort vergessen?</a>
      </div>
    </form>
  </div>

</div>
{% endblock %}
