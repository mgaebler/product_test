{% extends "base.jinja" %}

{% block title %}{{ title }}{% endblock %}
{% block content_title %}<h1>{{ title }}</h1>{% endblock %}
{% block content %}
  <div class="inner container">
    <div class="row">
      <div class="box login col-md-12 col-md-offset-6">
        {% if validlink %}

          <p>{{ _("Please enter your new password twice so we can verify you typed it in correctly.") }}</p>

          <form action="" method="post">{% csrf_token %}
            {{ form.new_password1.errors }}
            <p class="aligned wide"><label
                for="id_new_password1">{{ _('New password:') }}</label>{{ form.new_password1 }}
            </p>
            {{ form.new_password2.errors }}
            <p class="aligned wide"><label
                for="id_new_password2">{{ _('Confirm password:') }}</label>{{ form.new_password2 }}</p>

            <p><input type="submit" value="{{ _('Change my password') }}"/></p>
          </form>

        {% else %}

          <p>{{ _("The password reset link was invalid, possibly because it has already been used.  Please request a new password reset.") }}</p>

        {% endif %}
      </div>
    </div>
  </div>

{% endblock %}
