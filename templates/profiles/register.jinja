{% extends 'base.jinja' %}

{% block content %}

<div class="inner container">
  <div class="box login col-md-12 col-md-offset-6">
    <h2>Anmelden</h2>

    <form accept-charset="UTF-8" action="{{ url('login') }}" class="new_user" id="new_user" method="post">
      {% csrf_token %}
      <div class="form-group">
        <label class="sr-only control-label" for="user_email">Email</label>
        <input class="form-control" id="user_email" name="user[email]" placeholder="Deine E-Mail-Adresse" type="text">
      </div>

    </form>

  </div>

</div>
{% endblock %}