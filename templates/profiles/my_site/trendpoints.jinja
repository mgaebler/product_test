{% extends 'profiles/base.jinja' %}

{% block profile_content %}

  <div class="inner container">

    <!-- %h2 Meine Trendpoints -->
    <div class="row">
      <div class="col-md-14 col-md-offset-5">
        <div class="trendpoints">
          <span>{{ user.bank_account.all().first().balance or 0 }}</span>
        </div>
      </div>
    </div>


    <div class="row">
      <div class="col-md-14 col-md-offset-5">

        <table class="table">
          <thead>
          <tr>
            <th>Transaktion</td>
            <th>Trendpoints</td>
          </tr>
          </thead>
          <tbody>
          {% for transfer in object_list %}
            <tr>
              <td>{{ transfer.reference }}</td>
                <td class="reward-points">
                    {% if transfer.sender.type == 'ca' %}
                      &ndash; <span class="reward-points debit">{{ transfer.amount }}</span>
                    {% else %}
                      <span class="reward-points">{{ transfer.amount }}</span>
                    {% endif %}
                </td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
      </div>
    </div>


    <div class="row">
      <div class="col-md-14 col-md-offset-5">

        <div class="how-to-earn">
          <h4>Wie verdiene ich Trendpoints?</h4>
        </div>

        <div class="reward-list">

          <div class="reward">
            <div class="reward-title">Anmelden</div>
            <div class="reward-points">
              <span>5</span>
            </div>
          </div>

          <div class="reward emphazised">
            <div class="reward-title">
              <a href="{{ url('user:surveys') }}">Umfrage Ausfüllen</a>
            </div>
            <div class="reward-points">
              <span>Ab 10</span>
            </div>
          </div>

          <div class="reward">
            <div class="reward-title">
              <a href="{{ url('user:invite_friends') }}">Freunde einladen</a>
            </div>
            <div class="reward-points">
              <span>5</span>
            </div>
          </div>

          <div class="reward">
            <div class="reward-title">
              Teilnahme an einem Produkttest
              <br>
              <small>inkl. Ausfüllen des Bewerbungs- und Abschlussfragebogens</small>
            </div>
            <div class="reward-points">
              <span>20</span>
            </div>
          </div>

        </div>
      </div>
    </div>

  </div>

{% endblock profile_content %}
