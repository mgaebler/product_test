{% extends 'profiles/base.jinja' %}

{% block profile_content %}
  <style>
    input, select {
      padding: 6px 12px;
      width: 100%;
    }

    input[type="checkbox"], input[type="radio"] {
      width: 24px;
    }

    div.avatar a {
      display: block;
    }
  </style>
  <div style="padding-top:20px">
    <a href="/my/umfragen">Zurück zur &Uuml;bersicht</a>
    <a href="{{ url('surveys:form_delete', slug=form.slug) }}">Daten löschen</a>
  </div>
  <div class="row">
    <div class="col-md-18 col-md-offset-6">
      <div class="user-profile">
        <h1>{{ form.title }}</h1>
        {% if form.intro %}
            <p>{{ form.intro }}</p>
        {% endif %}
        {{ form_for_form.media }}
        <form action="{{ form.get_absolute_url() }}" method="post"
            {% if form_for_form.is_multipart %}enctype="multipart/form-data"{% endif %}>
            {% csrf_token %}
            {% for field in form_for_form %}
              <div class="form-group {% if field.errors %} has-error{% endif %}">
                <label class="control-label col-sm-8" for="{{ field.id }}">
                  {{ field.label }}
                </label>

                <div class="col-sm-10">
                  {{ field }}
                  <div class="help-block">
                    Pflichtfeld.
                    {{ field.errors }}
                  </div>
                </div>
              </div>

            {% endfor %}

          <div class="form-group">
            <label class="control-label col-sm-8"></label>
            <div class="col-sm-10">
              <input class="btn btn-primary btn-block" name="commit" type="submit" value="Speichern">
            </div>
          </div>

        </form>
      </div>
    </div>
  </div>
{% endblock profile_content %}
