{% extends 'profiles/base.jinja' %}

{% block profile_content %}
  <div class="surveys">
    <div style="padding-top:20px">
      <a href="/my/umfragen">Zurück zur &Uuml;bersicht</a> |
      <a href="{{ url('surveys:form_delete', slug=form.slug) }}">Alle Daten löschen</a>
    </div>
    <div class="row">
      <div class="col-md-24">
          <h1>{{ form.title }}</h1>
          {% if form.intro %}
              <p>{{ form.intro }}</p>
          {% endif %}
          <form action="{{ form.get_absolute_url() }}" method="post"
              {% if form_for_form.is_multipart %}enctype="multipart/form-data"{% endif %}>
              {% csrf_token %}
              {% for field in form_for_form %}
                <div class="form-group {% if field.errors %} has-error{% endif %}">
                  <div class="survey-oabeo">
                    <label class="control-label" for="{{ field.id }}">
                      {{ field.label }}
                    </label>
                  </div>
                  <div class="help-block">
                    {{ field.errors }}
                  </div>
                  {{ field }}
                </div>
              {% endfor %}
              <div>
                <input class="btn btn-primary btn-200" name="commit" type="submit" value="Speichern">
              </div>
            </form>
        </div>
    </div>
  </div>
{% endblock profile_content %}
