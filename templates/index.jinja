{% extends 'base.jinja' %}

{% block content %}

<div class='inner container'>
  <div class='row'>
    <div class='col-md-18'>
      {% autoescape off %}
      {{ content }}
      {% endautoescape %}

    </div>

    {# right sidebar #}
    <div class='sidebar col-md-6'>
      <div class='box highlight inverse register-box'>
        {% if user.is_authenticated() %}
        <p class='bigger'>Produkte testen und Trends setzen.</p>

        <p class='bigger'>
          <strong>Du bist dabei!</strong>
        </p>

        <p>
          Jetzt kannst Du Deine
          <a href="{{ url('user:invite_friends') }}">Freunde einladen</a>
          und dafür Trendpoints verdienen, die Du dann gegen interessante Prämien eintauschen kannst.
        </p>
        {% else %}
        <p class="bigger">Produkte testen und Trends setzen.</p>

          {# @todo: put this css out of this file#}
          <a
            href="{{ url('user:register') }}"
            class="btn btn-invert btn-lg btn-block"
            style="background-color: #000000; color: whitesmoke; -webkit-font-smoothing: subpixel-antialiased"
          >
              Mach jetzt mit
          </a>

        {% endif %}
      </div>

      {# stickerz #}
      <p class="register-raffle-teaser">
        {% autoescape off %}
        {{ stickers('raffle_teaser') }}
        {% endautoescape %}
      </p>

      {% if not user.is_authenticated() %}
        {{ providers_media_js(request)|safe }}
        <div class="box login-box">

          <p class="big">
            Schon Mitglied?
            <strong>Log Dich ein!</strong>
          </p>

          <div>
            <a class="btn btn-auth btn-block btn-lg btn-facebook"
               href="{{ provider_login_url(request, 'facebook', method='js_sdk', next=url('user:settings')) }}">
                Facebook <strong>Login</strong>
            </a>
          </div>

          <div class="strike-container">
            <span>oder</span>
          </div>

          <form accept-charset="UTF-8" action="{{ url('user:login') }}" class="new_user" id="new_user"
                method="post">
            {% csrf_token %}
            <div class="form-group">
              <label class="sr-only control-label" for="user_email">Email</label>
              <input class="form-control"
                     id="user_email"
                     name="user[email]"
                     placeholder="E-Mail-Adresse"
                     type="text">
            </div>
            <div class="form-group">
              <label class="sr-only control-label" for="password">Password</label>
              <input class="form-control"
                     id="user_password" name="user[password]" placeholder="Passwort"
                     type="password">
            </div>
            <input class="btn btn-primary btn-lg btn-block" name="commit" type="submit" value="Log Dich ein">
          </form>

        </div>
      {% endif %}
    </div>
  </div>
</div>

{% endblock content %}
