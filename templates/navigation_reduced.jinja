<nav class="navbar navbar-default">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                    data-target="#navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ url('home') }}" alt="trendsetter">
                {% if product_test and product_test.brand and product_test.brand.logo_top %}
                    <img width="200px" src="{{ thumbnail(product_test.brand.logo_top, size=(280, 280)) }}" alt="trendsetter"/>
                {% else %}
                    <img width="200px" src="{{ static("app/images/dashboard_logo_header.png") }}" alt="trendsetter"/>
                {% endif %}

            </a>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li {% if request.path == url('product_test:index') %}class="active"{% endif %}>
                    <a href="{{ url('product_test:index') }}">Produkttests</a>
                </li>
                <li {% if request.path == url('how_it_works') %}class="active"{% endif %}>
                    <a href="{{ url('how_it_works') }}">Wie funktioniert’s?</a>
                </li>
                <li {% if request.path == url('our_brands') %}class="active"{% endif %}>
                    <a href="{{ url('our_brands') }}">Unsere Marken</a>
                </li>
                <li {% if request.path == url('static_page', url='ueber-uns') %}class="active"{% endif %}>
                    <a href="{{ url('static_page', url='ueber-uns') }}">Über uns</a>
                </li>
            </ul>

            {# user #}
            <ul class="nav navbar-nav navbar-right">

                {% if not user.is_authenticated() %}
                    <li>
                        Schon Mitglied?
                        <a href="{{ url('user:login_form') }}">{{ _('Log in') }}</a>
                    </li>
                {% else %}

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                           aria-expanded="false">
                            {% if user.avatar %}
                                <img align="right"
                                     alt="Default avatar"
                                     class="user-avatar user-avatar-medium"
                                     src="{{ thumbnail(user.avatar, size=(32, 32)) }}"
                                        />
                            {% else %}
                                <img align="right" alt="avatar"
                                     class="img-circle user-avatar user-avatar-medium"
                                     src="{{ static('app/images/default_avatar.jpg') }}"
                                        />
                            {% endif %}
                            {{ user.preferred_name }}<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">

                            {% if user.is_staff %}
                                <li>
                                    <a href="/admin/">Admin</a>
                                </li>
                            {% endif %}

                            <li>
                                <a href="{{ url('user:index') }}">Meine Seite</a>
                            </li>

                            <li>
                                <a href="{{ url('user:settings') }}">Einstellungen</a>
                            </li>

                            <li>
                                <a href="{{ url('user:logout') }}">Ausloggen</a>
                            </li>

                        </ul>
                    </li>

                {% endif %}
            </ul>
        </div>
    </div>
</nav>