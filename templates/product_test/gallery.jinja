{% extends 'product_test/base.jinja' %}

{% block product_test_content %}
<div class="forum-header">
  <p style="background-color: #eaeaea; font-weight: bold; padding: 5px">
    Hier kannst Du Deine Fotos und Videos aus der Trendsetter-Aktion
    <span>{{ product_test.title }}</span>
    hochladen
  </p>

  <h4>Hochgeladene Bilder</h4>

  {% for image in product_test.gallery.images.all() %}
    <img src="{{ image.file.url }}" alt=""/>
  {% endfor %}

  <form action="post">
    {% csrf_token %}
    {% autoescape off %}
    {{ image_upload_form|bootstrap }}
    {% endautoescape %}
    <input type="submit"/>
  </form>

  <h4>Hochgeladene Videos</h4>

    {% for video in product_test.gallery.videos.all() %}
        Video
    {% endfor %}

  <form action="post">
    {% csrf_token %}
    {% autoescape off %}
    {{ video_upload_form|bootstrap }}
    {% endautoescape %}
    <input type="submit"/>
  </form>
</div>
{% endblock %}