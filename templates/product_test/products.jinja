{% extends 'base.jinja' %}

{% block content %}
  <div class="container product-test-overview">
    <div class="row">
      <h2>Unsere Produkttests auf einen Blick</h2>

      <div class="col-md-24">
        {% for test in product_test_list %}

          <div class="brand-fuersie test-tile" style="display: inline-block">
            <h3 class="test-title">
              <a href="{{ url('product_test:info', slug=test.slug) }}">
                {{ test.title }}
              </a>
            </h3>

            <div class="test-link">
              <a class="btn btn-inverted" href="{{ url('product_test:info', slug=test.slug) }}">
                Jetzt mitmachen
              </a>
            </div>

            <a class="test-teaser" href="{{ url('product_test:info', slug=test.slug) }}"
               style="background: url({{ thumbnail(test.list_image, size=(400, 400)) }}) no-repeat 50% 100%">
              {{ test.title }}
            </a>
          </div>

        {% endfor %}
      </div>
    </div>

    <div class="row">
      <h2>Abgeschlossene Projekte</h2>

      <div class="col-md-24">
        {% for test in product_test_list %}

          <div class="brand-fuersie test-tile" style="display: inline-block">
            <h3 class="test-title">
              <a href="{{ url('product_test:info', slug=test.slug) }}">
                {{ test.title }}
              </a>
            </h3>

            <div class="test-link">
              <a class="btn btn-inverted" href="{{ url('product_test:info', slug=test.slug) }}">
                Jetzt mitmachen
              </a>
            </div>

            <a class="test-teaser" href="{{ url('product_test:info', slug=test.slug) }}"
               style="background: url({{ thumbnail(test.list_image, size=(400, 400)) }}) no-repeat 50% 100%">
              {{ test.title }}
            </a>
          </div>

        {% endfor %}
      </div>

    </div>
  </div>
{% endblock %}