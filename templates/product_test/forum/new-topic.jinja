{% extends 'product_test/base.jinja' %}

{% block product_test_content %}

<form action="{{ url('product_test:forum:new-topic', slug=product_test.slug, forum_id=forum.id) }}" method="POST">
    {% csrf_token %}
    {% autoescape off %}
    {{ form|bootstrap }}
    {% endautoescape %}
    <input class="btn btn-default" type="submit" value="Neues Topic erstellen" />
</form>

{% endblock %}