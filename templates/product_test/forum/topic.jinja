{% extends 'product_test/base.jinja' %}

{% block product_test_content %}

  <div class="forum-topic">
    <h2>{{ topic.title }}</h2>
    <div>
      <p>
        {{ topic.description|linebreaks }}
      </p>
    </div>
  </div>

  <div class="forum-entries-holder">

    {% for post in posts %}

      <div class="forum-entry row" id="post-{{ post.pk }}">
        <section>
          {# avatar #}
          <div class="forum-entry-user col-md-3">
            {% if post.creator.is_staff %}
              <img class="team crown" src="{{ static('app/images/crown.png') }}" class="user-avatar user-avatar-medium" />
            {% endif %}
            {% if post.creator.avatar %}
              <img class="img-circle" alt="Default avatar" src="{{ thumbnail(post.creator.avatar, size=(42, 42), crop=True) }}"/>
            {% else %}
              <img alt="avatar" class="img-circle user-avatar user-avatar-medium"
                   src="{{ static('app/images/default_avatar.jpg') }}"/>
            {% endif %}

            <div class="nickname">
              {{ post.creator.preferred_name }}
            </div>
            {% if post.creator.is_staff %}
            <div class="title">
                Admin
            </div>
            {% endif %}
          </div>

          <header>
            {# title #}
            <div class="forum-entry-title col-md-15">
              <h3>{{ post.title }}</h3>
            </div>

            {# date #}
            <div class="forum-entry-timestamp col-md-6">
            <span class="link-camo">
              <span class="date">{{ post.created|date }}</span>,
              <time>{{ post.created|time }}</time>
            </span>
            </div>
          </header>

          <div class="forum-entry-body col-md-21">
            {{ post.body|linebreaks }}
          </div>

        </section>

      </div>

    {% endfor %}

  </div>


    {% if not user.is_authenticated() %}
      <div class="forum-not-logged-in">
      <p>
        <a href="{{ url('user:login_form') }}">Log Dich ein</a>, um einen Beitrag zu verfassen.
      </p>
      </div>
    {% else %}
      <a class="btn btn-default"
         href="{{ url('product_test:forum:reply', slug=product_test.slug, topic_id=topic.pk) }}">Antworten</a>
    {% endif %}



{% endblock %}