<body class="{% block body_class %}{% endblock %}">

{% if debug %}
    <div style="background-color: red; color: white; text-align: center">Debug</div>
{% endif %}

<header class="main">


  {% block user_panel %}
    <div class="container">
        <div class="row current-user">
          <div class="col-md-24">

            {% if not user.is_authenticated() %}
              Schon Mitglied?
              <a href="{{ url('user:login_form') }}">{{ _('Log in') }}</a>
            {% else %}

              <a href="{{ url('user:tests') }}">
                {% if user.avatar %}
                  <img align="right"
                       alt="Default avatar"
                       class="user-avatar user-avatar-medium"
                       src="{{ thumbnail(user.avatar, size=(32, 32)) }}"
                       />
                {% else %}
                  <img align="right" alt="avatar"
                       class="img-circle user-avatar user-avatar-medium"
                       src="{{ static('app/images/default_avatar.jpg') }}"
                       />
                {% endif %}
              </a>
              Hallo, {{ user.preferred_name }}
              <br>

              {% if user.is_staff %}
                <a href="/admin/">Admin</a>
                |
              {% endif %}
              <a href="{{ url('user:index') }}">Meine Seite</a>
              |
              <a href="{{ url('user:settings') }}">Einstellungen</a>
              |
              <a href="{{ url('user:logout') }}">Ausloggen</a>
            {% endif %}

          </div>
        </div>
    </div>
  {% endblock user_panel %}


  {% block logo %}
    <div class="container">
        <div class="row">
          <div id="logo"
               class="col-md-24"
               {% if product_test and product_test.brand and product_test.brand.logo_top %}style="background: url({{ thumbnail(product_test.brand.logo_top, size=(280, 280)) }}) no-repeat 0 18px"{% endif %}
               >
            <h1><a href="{{ url('home') }}">Trendsetter</a></h1>
          </div>
        </div>
    </div>
  {% endblock %}


  {% block main_navigation %}
      <div class="main-nav">
    <div class="container">
        <div class="row">
      <nav>
          <ul class="col-md-24">
            <li {% if request.path == url('product_test:index') %}class="active"{% endif %}>
              <a href="{{ url('product_test:index') }}">Produkttests</a>
            </li>
            <li {% if request.path == url('how_it_works') %}class="active"{% endif %}>
              <a href="{{ url('how_it_works') }}">Wie funktioniert’s?</a>
            </li>
            <li {% if request.path == url('our_brands') %}class="active"{% endif %}>
              <a href="{{ url('our_brands') }}">Unsere Marken</a>
            </li>
            <li {% if request.path == url('static_page', url='ueber-uns') %}class="active"{% endif %}>
              <a href="{{ url('static_page', url='ueber-uns') }}">Über uns</a>
            </li>
          </ul>
      </nav>
        </div>
    </div>
      </div>
  {% endblock main_navigation %}


  {% block dash_nav %}
  {% endblock dash_nav %}

</header>

{# flash messages #}
{% if messages %}
  <div class="container">
    <div id="flashes">
      <div class="inner">
        <ul class="messages">
          {% for message in messages %}
            <li class="flash {% if message.tags %}{{ message.tags }}{% endif %}">
{#              {% if message.level == DEFAULT_MESSAGE_LEVELS.ERROR %}Important: {% endif %}#}
              {{ message }}
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
{% endif %}

<div class="container">
<section role="content">
  {% block content %}{% endblock content %}
</section>
</div>


{% include 'footer.jinja' %}


{# javascript #}
{% javascript 'common' %}

{% if messages %}
<script type="text/javascript">
    (function($){
      "strict";

      $(document).ready(function () {

        $('.flash').click(function () {
          $(this).hide('slow');
        });

        $('.flash').delay(5000).hide('slow');

      })
    })(jQuery);

</script>
{% endif %}


{% block javascript %}{% endblock %}


